#!/bin/sh

WAYLAND="$XDG_RUNTIME_DIR/$WAYLAND_DISPLAY"

HOME_DIR="$HOME/.var/box"
mkdir --parents "$HOME_DIR"
cp --recursive --update=none "/etc/skel/." "$HOME_DIR"

WORKING_DIR=$(pwd | sed -e "s/\/var\/home/\/home/")

detect_yubikey() {
    FILES="/dev/hidraw*"
    for f in $FILES
    do
        FILE=${f##*/}
        DEVICE_FILE="/sys/class/hidraw/$FILE/device/uevent"
        if grep -q "Yubico YubiKey FIDO" "$DEVICE_FILE"; then
            printf "%s" "$f"
            return
        fi
    done
    printf "/dev/null"
}
YUBIKEY=$(detect_yubikey)

bwrap \
    --ro-bind /bin /bin \
    --ro-bind /etc /etc \
    --ro-bind /lib /lib \
    --ro-bind /lib64 /lib64 \
    --ro-bind /opt /opt \
    --ro-bind /sbin /sbin \
    --ro-bind /usr /usr \
    --ro-bind /sys /sys \
    --ro-bind "$WAYLAND" "$WAYLAND" \
    --ro-bind "/run/.containerenv" "/run/.containerenv" \
    --ro-bind "/run/.toolboxenv" "/run/.toolboxenv" \
    --ro-bind "/run/systemd/resolve" "/run/systemd/resolve" \
    --bind "$HOME_DIR" "$HOME" \
    --bind "$WORKING_DIR" "$WORKING_DIR" \
    --chdir "$WORKING_DIR" \
    --dev /dev \
    --proc /proc \
    --tmpfs /tmp \
    --tmpfs "/etc/ssh/ssh_config.d" \
    --dev-bind "/dev/dri" "/dev/dri" \
    --dev-bind "$YUBIKEY" "$YUBIKEY" \
    /usr/bin/bash
