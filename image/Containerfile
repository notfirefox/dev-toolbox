FROM registry.fedoraproject.org/fedora-toolbox:40

# Add image label
ARG NAME=dev-toolbox
ARG VERSION=40
LABEL com.github.containers.toolbox="true" \
      name="$NAME" \
      version="$VERSION" \
      quay.expires-after="4w" \
      usage="This image is meant to be used with the toolbox(1) command" \
      summary="Image for creating Fedora Toolbx containers"

# Install development tools
RUN dnf -y groupinstall "Development Tools" "Development Libraries"

# Enable copr repositories
RUN dnf -y copr enable petersen/haskell-language-server
RUN dnf -y copr enable yorickpeterse/lua-language-server

# Install extra packages
COPY extra-packages /
RUN dnf -y install $(<extra-packages)
RUN rm /extra-packages

# Clean dnf cache
RUN dnf clean all

# Add container sandbox
COPY sandbox /usr/local/bin/
